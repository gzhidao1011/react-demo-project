<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.user.mapper.PasswordResetTokenMapper">

    <resultMap id="TokenResultMap" type="com.example.user.entity.PasswordResetTokenEntity">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="tokenHash" column="token_hash"/>
        <result property="expiresAt" column="expires_at"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <select id="findByTokenHash" resultMap="TokenResultMap">
        SELECT id, user_id, token_hash, expires_at, created_at
        FROM password_reset_tokens
        WHERE token_hash = #{tokenHash}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO password_reset_tokens (user_id, token_hash, expires_at, created_at)
        VALUES (#{userId}, #{tokenHash}, #{expiresAt}, #{createdAt})
    </insert>

    <delete id="deleteById">
        DELETE FROM password_reset_tokens WHERE id = #{id}
    </delete>

    <delete id="deleteByUserId">
        DELETE FROM password_reset_tokens WHERE user_id = #{userId}
    </delete>

    <delete id="deleteExpiredBefore">
        DELETE FROM password_reset_tokens WHERE expires_at &lt; #{before}
    </delete>

    <delete id="deleteAll">
        DELETE FROM password_reset_tokens
    </delete>
</mapper>
