{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
  "root": true,
  "extends": ["./packages/biome-config/base.json"],
  "formatter": {
    "enabled": true,
    "lineWidth": 120,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },
  "files": {
    "includes": ["**", "!!**/*.css", "!!**/services/**/*.js", "!!**/playwright-report", "!!**/test-results"]
  }
}
