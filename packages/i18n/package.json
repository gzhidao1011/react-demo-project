    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "prebuild": "pnpm test",
    "prepublishOnly": "pnpm test && pnpm check:types"
  },
  "devDependencies": {
    "@repo/biome-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "typescript": "catalog:",
    "@repo/types": "workspace:*",
    "tsdown": "catalog:",
    "react-hook-form": "catalog:",
    "vitest": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4"
  },
  "dependencies": {
    "@heroicons/react": "catalog:",
    "@repo/ui": "workspace:*",
    "@repo/utils": "workspace:*",
    "intl-messageformat": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:"
  }
