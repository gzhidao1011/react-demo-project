{
  "name": "@repo/i18n",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./*": [
      "./src/*.ts"
    ]
  },
  "scripts": {
    "lint": "biome check --write",
