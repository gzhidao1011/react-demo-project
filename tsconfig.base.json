{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "preserve",
    "moduleResolution": "bundler",
    "target": "esnext",
    "module": "esnext",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "paths": {
      "@yysl/utils": ["packages/utils/src"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": ["packages/*/src", "apps/*/src"]
}
